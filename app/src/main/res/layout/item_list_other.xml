<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.zzg.zcib.view.CircleImageView
            android:id="@+id/item_list_other_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#fff"
            android:src="@drawable/user_img"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_gravity="center"
            android:id="@+id/item_list_other_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="南昌"/>
    </LinearLayout>

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/item_list_other_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"/>
    <TextView
        android:layout_margin="10dp"
        android:id="@+id/item_list_other_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-11-27"
        android:layout_gravity="right"/>
</LinearLayout>